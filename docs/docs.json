        "pages": [
          "introduction/welcome",
          "introduction/quickstart", 
          "introduction/installation"
        ]
      },
      {
        "group": "Core Concepts",
        "pages": [
          "concepts/architecture",
          "concepts/a2a"
        ]
      },
      {
        "group": "Build Your Own Agent",
        "pages": [
          "build-agents/hello-world",
          {
            "group": "Fundamentals",
            "pages": [
              "build-agents/llm-configuration",
              "build-agents/agent-details",
              "build-agents/messages",
              "build-agents/files",
              "build-agents/gui-components"
            ]
          }
        ]
      },
      {
        "group": "Working with Agents",
        "pages": [
          "working-with-agents/discover-agents",
          "working-with-agents/run-agents", 
          "working-with-agents/observe-agents",
          "working-with-agents/import-agents",
          "working-with-agents/share-agents"
        ]
      },
      {
        "group": "Guides",
        "pages": [
          "how-to/environment-configuration",
          "how-to/mcp",
          "how-to/web-interface",
          "how-to/cli-reference"
        ]
      },
      {
        "group": "Deployment",
        "pages": [
          "deployment/overview",
          "deployment/kubernetes"
        ]
      },
      {
        "group": "Community & Support",
        "pages": [
          "community-and-support/troubleshooting",
          "community-and-support/contribute"
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/beeai-lockup.svg",
    "dark": "/logo/beeai-lockup-white.svg"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "GitHub",
      "href": "https://github.com/i-am-bee/beeai-platform"
    },
    "links": [
      {
        "label": "Agent Catalog",
        "href": "https://beeai.dev/agents"
      },
      { "label": "Discord", "href": "https://discord.gg/NradeA6ZNF" }
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/i-am-bee/beeai-platform",
      "discord": "https://discord.gg/AZFrp3UF5k",
      "bluesky": "https://bsky.app/profile/beeaiagents.bsky.social",
      "youtube": "https://www.youtube.com/@BeeAIAgents"
    }
  },
  "redirects": [
    {
      "source": "/acp/spec/openapi.yaml",
      "destination": "https://github.com/i-am-bee/acp/blob/main/docs/spec/openapi.yaml"
    },
    {
      "source": "/acp/:slug*",
      "destination": "https://agentcommunicationprotocol.dev"
    }
  ]
