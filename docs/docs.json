{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "BeeAI",
  "colors": {
    "primary": "#000000",
    "light": "#c5c5c5",
    "dark": "#000000"
  },
  "favicon": "/favicon.svg",
  "navigation": {
